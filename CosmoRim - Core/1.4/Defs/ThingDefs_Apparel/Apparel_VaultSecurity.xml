		</graphicData>
		<recipeMaker>
			<researchPrerequisite>CosRim_VaultArmoury</researchPrerequisite>
		</recipeMaker>
		<apparel>
			<tags Inherit="False">
				<li>VaulterApparel</li>
				<li>VaulterSecurity</li>
			</tags>
			<wornGraphicPath>CosmoRim/Apparel/VaultSecurity/Head</wornGraphicPath>
			<useWornGraphicMask>false</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options" Inherit="False">
			<options>
				<li>
					<weight>10</weight>
					<only>(180, 180, 180)</only>
				</li>
			</options>
		</colorGenerator>
		<thingSetMakerTags>
			<li>CosmoRim_Apparel</li>
		</thingSetMakerTags>
	</ThingDef>
	
